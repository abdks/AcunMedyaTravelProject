@model List<AcunMedyaTravelProject.Entities.Services>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


@* 
Bir normal c# ile yapılan silme işlemi 
    İkinci ajax ile yapılan silme işlemi

*@


<div class="container">
    <br /><br />
    <h2>Hizmetler Listesi</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <td>ID</td>
                <td>Başlık</td>
                <td>Açıklama</td>
                <td>Resim</td>
                <td>Güncelle</td>
                <td>Sil</td>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServicesID</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td><img src="@item.ImageUrl" style="width:50px;height:50px" /></td>
                    <td><a href="/Services/UpdateServices/@item.ServicesID" class="btn btn-success">Güncelle</a></td>
                    <td><button class="btn btn-danger" onclick="Delete(@item.ServicesID)">Sil</button></td>
                </tr>
            }

        </tbody>
    </table>
    <br /><br />
    <a href="/Serices/AddServices/" class="btn btn-dribbble">Oluştur</a>
</div>


<script>
    function Delete(id) {
        Swal.fire({
            title: "Emin Misin?",
            text: "Dikkat bu işlemin geri dönüşü yoktur!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Silindi!",
                    text: "Verin silindi",
                    icon: "success"
                });
                window.location.href = '/Services/DeleteServices/' + id;
            }
        });
    }
</script>